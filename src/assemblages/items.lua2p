local Items = {}

local ItemsInfo = require("items")

function Items.flashlight(e)
	local info = ItemsInfo.get_info("flashlight")
	e:give("id", "item_flashlight")
	:give("nf_render_sprite")
	:give("sprite", "item_flashlight")
	:give("item", info.id, info.desc)
	:give("color", {1, 1, 1, 1})
	:give("pos", 0, 0)
end

return Items
