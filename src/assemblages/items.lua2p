local Palette = require("palette")

local Items = {}

local function item(e)
	e:give("item")
	:give("hoverable")
	:give("clickable")
	:give("color", Palette.get("item_default", 0))
	:give("hidden")
	:give("ui_element")
	:give("camera")
end

function Items.backdoor_key(e, sprite)
	e:assemble(item)
	:give("id", "item_backdoor_key")
	:give("sprite", sprite)
end

return Items
