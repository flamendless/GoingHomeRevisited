local Concord = require("modules.concord.concord")

Concord.component("path", function(c, points)
	@@assert(type(points) == "table")
	!if _DEV then
	for i, v in ipairs(points) do
		@@assert(type(v.x) == "number")
		@@assert(type(v.y) == "number")
	end
	!end
	c.points = points
	c.n_points = #points
	c.current_point = 1
end)
