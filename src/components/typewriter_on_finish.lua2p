local Concord = require("modules.concord.concord")

!if _ASSERT then
local Assert = require("assert")
!end

Concord.component("typewriter_on_finish", function(c, callback, delay)
	!if _ASSERT then
	Assert.should_function(callback)
	Assert.safe_should_number(delay)
	!end

	c.callback = callback
	c.delay = delay or 0
end)
