local Concord = require("modules.concord.concord")

!if _ASSERT then
local Assert = require("assert")
!end

Concord.component("animation_on_complete", function(c, callback, event)
	!if _ASSERT then
	ASSERT.should_function(callback)
	ASSERT.either_value(event, "pauseAtEnd", "pauseAtStart")
	!end

	c.callback = callback
	c.event = event
end)
