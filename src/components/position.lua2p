local Concord = require("modules.concord.concord")

Concord.component("position", function(c, pos)
	!if _ASSERT then
	Assert.is(pos, Types.T_VEC2)
	!end

	c.pos = pos
	c.original_pos = pos:copy()
end)

Concord.component("spawn_point_action_controls", function(c)
	c.pos = vec2:new()
end)

Concord.component("spawn_point_question_mark", function(c)
	c.pos = vec2:new()
end)

Concord.component("size", function(c, size)
	!if _ASSERT then
	Assert.is(size, Types.T_VEC2)
	!end

	c.size = size
end)
