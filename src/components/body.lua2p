local Concord = require("modules.concord.concord")

Concord.component("body", function(c, can_move, can_run)
	!if _ASSERT then
	Assert.safe.must(can_move, Types.T_BOOLEAN)
	Assert.safe.must(can_run, Types.T_BOOLEAN)
	!end

	c.can_move = can_move ~= false
	c.can_run = can_run ~= false
	c.is_run = false
	c.dx = 0
	c.dy = 0
	c.dir = 1
	c.vel_x = 0
	c.vel_y = 0
end)
