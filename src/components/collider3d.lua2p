local Concord = require("modules.concord.concord")
local Enum = require("modules.enum.enum")

local filters = Enum("slide", "cross", "bounce")

Concord.component("bump3d", function(c)
end)

Concord.component("collider3d", function(c, size, filter)
	!if _ASSERT then
	Assert.is(size, Types.T_VEC3)
	!end

	c.size = size
	c.prev_hit = false
	c.is_hit = false
	c.filter = nil
	c.normal = vec3:new()

	if filter then
		c.filter = filters[filter]
	end
end)
