local Concord = require("modules.concord.concord")
local Enum = require("modules.enum.enum")

local filters = Enum("slide", "cross", "bounce")

Concord.component("bump3d")

Concord.component("collider3d", function(c, x, y, z, filter)
	@@assert(type(x) == "number")
	@@assert(type(y) == "number")
	@@assert(type(z) == "number")
	c.x = x
	c.y = y
	c.z = z
	c.prev_hit = false
	c.is_hit = false
	c.filter = nil
	c.normal = {x = x, y = y, z = z}

	if filter then
		c.filter = filters[filter]
	end
end)
