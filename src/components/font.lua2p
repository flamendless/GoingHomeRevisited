local Concord = require("modules.concord.concord")

Concord.component("font", function(c, font)
	@@assert(font:type() == "Font" or font:type() == "fontsdf")
	c.value = font
end)

Concord.component("sdf", function(c, sx, sy)
	@@sassert(sx, type(sx) == "number")
	@@sassert(sy, type(sy) == "number")
	c.sx = sx or 1
	c.sy = sy or 1
end)
