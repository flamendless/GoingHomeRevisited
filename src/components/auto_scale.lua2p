local Concord = require("modules.concord.concord")

Concord.component("auto_scale", function(c, target_width, target_height, is_proportion)
	!if _ASSERT then
	Assert.must(target_width, Types.T_NUMBER)
	Assert.must(target_height, Types.T_NUMBER)
	!end

	c.target_width = target_width
	c.target_height = target_height
	c.is_proportion = is_proportion or false
end)
