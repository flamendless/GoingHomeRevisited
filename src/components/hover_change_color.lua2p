local Concord = require("modules.concord.concord")

!if _ASSERT then
local Assert = require("assert")
!end

Concord.component("hover_change_color", function(c, color, duration)
	!if _ASSERT then
	Assert.should_table(color)
	Assert.should_number(duration)
	!end

	c.color = { color[1], color[2], color[3], color[4] }
	c.duration = duration
end)
