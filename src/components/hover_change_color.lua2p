local Concord = require("modules.concord.concord")

Concord.component("hover_change_color", function(c, color, duration)
	!if _ASSERT then
	assert(type(color) == "table", "Passed argument must be either of type 'table'")
	assert(type(duration) == "number", "Passed argument must be either of type 'number'")
	!end
	c.color = { color[1], color[2], color[3], color[4] }
	c.duration = duration
end)
