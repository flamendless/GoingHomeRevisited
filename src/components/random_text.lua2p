local Concord = require("modules.concord.concord")

Concord.component("random_text", function(c, text, font)
	!if _ASSERT then
	Assert.either_type(text, "string", "table")
	Assert.safe_should_font(font)
	!end

	if type(text) == "string" then
		c.use_string = true
	elseif type(text) == "table" then
		c.use_table = true
	end
	c.text = text
	c.font = font
end)
