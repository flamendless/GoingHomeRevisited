local Concord = require("modules.concord.concord")

Concord.component("list_item")

Concord.component("list_cursor", function(c, cursor_index, max_page)
	@@assert(type(cursor_index) == "number")
	@@assert(type(max_page) == "number")
	c.cursor_index = cursor_index
	c.max_page = max_page
end)

Concord.component("list_group", function(c, group_id)
	@@assert(type(group_id) == "string")
	c.value = group_id
end)
