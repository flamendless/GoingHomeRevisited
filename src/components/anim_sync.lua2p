local Concord = require("modules.concord.concord")

Concord.component("anim_sync_with", function(c, target)
	@@assert(target.__isEntity and target.animation and target.current_frame)
	c.e_target = target
end)

Concord.component("anim_sync_data", function(c, c_name, c_props, t)
	@@assert(type(c_name) == "string")
	@@assert(type(c_props) == "table")
	@@assert(type(t) == "table")
	c.c_name = c_name
	c.c_props = c_props
	c.data = t
end)
