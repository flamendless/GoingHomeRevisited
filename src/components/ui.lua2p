local Concord = require("modules.concord.concord")

Concord.component("ui_element")

Concord.component("ui_offset", function(c, offset)
	!if _ASSERT then
	Assert.is(offset, Types.T_VEC2)
	!end

	c.offset = offset
end)

Concord.component("layer", function(c, id, n)
	!if _ASSERT then
	Assert.must(id, Types.T_STRING)
	Assert.safe.must(n, Types.T_NUMBER)
	!end

	c.id = id
	c.n = n or 0
end)
