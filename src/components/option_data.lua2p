local Concord = require("modules.concord.concord")

Concord.component("option_data", function(c, canvas, padding, max_count)
	!if _ASSERT then
	assert(canvas:type() == "Canvas", "Passed argument must be of type 'Canvas'")
	assert(type(padding) == "number", "Passed argument must be of type 'number'")
	assert(type(max_count) == "number", "Passed argument must be of type 'number'")
	!end
	c.canvas = canvas
	c.padding = padding
	c.max_count = max_count
end)
