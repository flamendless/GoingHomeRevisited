local Concord = require("modules.concord.concord")

Concord.component("fade_to_black", function(c, duration, delay)
	!if _ASSERT then
	assert(type(duration) == "number", "Passed argument1 must be of type 'number'")
	if delay then
		assert(type(delay) == "number", "Passed argument1 must be of type 'number'")
	end
	!end
	c.duration = duration
	c.delay = delay or 0
end)
