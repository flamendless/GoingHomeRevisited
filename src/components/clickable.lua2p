local Concord = require("modules.concord.concord")

!if _ASSERT then
local Assert = require("assert")
!end

Concord.component("clickable", function(c, mb, on_click)
	!if _ASSERT then
	Assert.should_number(mb)
	Assert.within_range(mb, 1, 3)
	Assert.should_function(on_click)
	!end

	c.mb = mb
	c.on_click = on_click
end)
