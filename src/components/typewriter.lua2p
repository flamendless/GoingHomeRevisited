local Concord = require("modules.concord.concord")

!if _ASSERT then
local Assert = require("assert")
!end

Concord.component("typewriter", function(c, target_text, every)
	!if _ASSERT then
	Assert.should_string(target_text)
	Assert.should_number(every)
	!end

	c.target_text = target_text
	c.every = every
	c.timer = nil
end)
