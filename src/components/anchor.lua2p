local Concord = require("modules.concord.concord")
local Type = require("modules.concord.concord.type")

Concord.component("anchor", function(c, entity, a_x, a_y, padding_x, padding_y)
	!if _ASSERT then
	Assert.should_entity(entity)
	Assert.should_string(a_x)
	Assert.should_string(a_y)
	Assert.safe_should_number(padding_x)
	Assert.safe_should_number(padding_y)
	!end

	c.entity = entity
	c.anchor_x = a_x
	c.anchor_y = a_y
	c.padding_x = padding_x
	c.padding_y = padding_y
end)
