local Concord = require("modules.concord.concord")

!if _ASSERT then
local Assert = require("assert")
!end

Concord.component("speed", function(c, speed)
	!if _ASSERT then
	Assert.safe_should_number(speed)
	!end

	c.speed = speed or 0
end)

Concord.component("speed_data", function(c, speed_data)
	!if _ASSERT then
	Assert.safe_should_table(speed)
	!end

	c.speed_data = speed_data
end)
