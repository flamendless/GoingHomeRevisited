local Concord = require("modules.concord.concord")

Concord.component("bounding_box", function(c, x, y, w, h)
	!if _ASSERT then
	Assert.must(x, Types.T_NUMBER)
	Assert.must(y, Types.T_NUMBER)
	Assert.must(w, Types.T_NUMBER)
	Assert.must(h, Types.T_NUMBER)
	!end

	c.x = x
	c.y = y
	c.w = w
	c.h = h
	c.screen_x = x
	c.screen_y = y
end)

Concord.component("bounding_box_color", function(c, color)
	!if _ASSERT then
	Assert.color(color)
	!end

	c.color = {unpack(color)}
end)
