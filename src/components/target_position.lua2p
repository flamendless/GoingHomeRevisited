local Concord = require("modules.concord.concord")

!if _ASSERT then
local Assert = require("assert")
!end

Concord.component("target_position", function(c, pos, duration, delay)
	!if _ASSERT then
	Assert.should_vec2(pos)
	Assert.should_number(duration)
	Assert.safe_should_number(delay)
	!end

	c.target_pos = pos:copy()
	c.duration = duration
	c.delay = delay or 0
end)
